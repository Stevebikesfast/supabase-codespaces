{
  "manifest_version": 3,
  "name": "David AI Assistant",
  "version": "1.0",
  "description": "Chat with David AI Assistant using OpenAI",
  "permissions": ["storage"],
  "host_permissions": [
    "https://gfahskcoysrpfkjcyrpu.supabase.co/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://gfahskcoysrpfkjcyrpu.supabase.co https://api.openai.com;"
  }
}
