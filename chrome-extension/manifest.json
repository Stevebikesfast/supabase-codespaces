{
  "manifest_version": 3,
  "name": "Supabase OpenAI Test",
  "version": "1.0",
  "description": "Test connection to Supabase and OpenAI",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://gfahskcoysrpfkjcyrpu.supabase.co/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
